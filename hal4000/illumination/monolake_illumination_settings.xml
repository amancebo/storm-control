<?xml version="1.0" encoding="ISO-8859-1"?>
<illumination_settings>

  <control_modules>

    <control_module>
      <name>obis405</name>
      <module_name>sc_hardware.coherent.hLaser</module_name>
      <class_name>CoherentObis</class_name>
      <parameters>
	<port>COM5</port>
      </parameters>
    </control_module>

    <control_module>
      <name>obis488</name>
      <module_name>sc_hardware.coherent.hLaser</module_name>
      <class_name>CoherentObis</class_name>
      <parameters>
	<port>COM7</port>
      </parameters>
    </control_module>

    <control_module>
      <name>obis561</name>
      <module_name>sc_hardware.coherent.hLaser</module_name>
      <class_name>CoherentObis</class_name>
      <parameters>
	<port>COM8</port>
      </parameters>
    </control_module>

    <control_module>
      <name>obis640</name>
      <module_name>sc_hardware.coherent.hLaser</module_name>
      <class_name>CoherentObis</class_name>
      <parameters>
	<port>COM6</port>
      </parameters>
    </control_module>

    <control_module>
      <name>daq</name>
      <module_name>sc_hardware.nationalInstruments.hNicontrol</module_name>
      <class_name>Nidaq</class_name>
      <parameters>
	<counter_board>PCI-6221</counter_board>
	<counter_id type="int">0</counter_id>
	<counter_trigger type="int">0</counter_trigger>
	<waveform_clock>ctr0out</waveform_clock>
      </parameters>
    </control_module>
  </control_modules>

  <channels>

    <!-- 405 laser -->
    <channel>
      <description>405</description>
      <color type="rgb">255,0,255</color>

      <amplitude_modulation>
      	<uses>obis405</uses>
	<display_normalized type="boolean">True</display_normalized>
	<parameters>
	  <maximum type="float">110.0</maximum>
	</parameters>
      </amplitude_modulation>

      <mechanical_shutter>
      	<uses>daq</uses>
      	<parameters>
      	  <board>PCI-6221</board>
      	  <channel type="int">0</channel>
      	</parameters>
      </mechanical_shutter>

    </channel>

    <!-- 488 laser -->
    <channel>
      <description>488</description>
      <color type="rgb">0,255,255</color>

      <amplitude_modulation>
      	<uses>obis488</uses>
	<display_normalized type="boolean">True</display_normalized>
	<parameters>
	  <maximum type="float">55.0</maximum>
	</parameters>
      </amplitude_modulation>

      <mechanical_shutter>
    	<uses>daq</uses>
    	<parameters>
    	  <board>PCI-6221</board>
    	  <channel type="int">1</channel>
    	</parameters>
      </mechanical_shutter>

    </channel>

    <!-- 561 laser -->
    <channel>
      <description>561</description>
      <color type="rgb">255,255,0</color>

      <amplitude_modulation>
      	<uses>obis561</uses>
	<display_normalized type="boolean">True</display_normalized>
	<parameters>
	  <maximum type="float">110.0</maximum>
	</parameters>
      </amplitude_modulation>

      <mechanical_shutter>
    	<uses>daq</uses>
    	<parameters>
    	  <board>PCI-6221</board>
    	  <channel type="int">2</channel>
    	</parameters>
      </mechanical_shutter>

    </channel>

    <!-- 640 laser -->
    <channel>
      <description>640</description>
      <color type="rgb">255,0,0</color>

      <amplitude_modulation>
      	<uses>obis640</uses>
	<display_normalized type="boolean">True</display_normalized>
	<parameters>
	  <maximum type="float">110.0</maximum>
	</parameters>
      </amplitude_modulation>

      <mechanical_shutter>
    	<uses>daq</uses>
    	<parameters>
    	  <board>PCI-6221</board>
    	  <channel type="int">3</channel>
    	</parameters>
      </mechanical_shutter>

    </channel>

    <!-- Lamp -->
    <channel>
      <description>White</description>
      <color type="rgb">255,255,255</color>
      
      <mechanical_shutter>
    	<uses>daq</uses>
    	<parameters>
    	  <board>PCI-6221</board>
    	  <channel type="int">4</channel>
    	</parameters>
      </mechanical_shutter>

    </channel>

  </channels>

</illumination_settings>
